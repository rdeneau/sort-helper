{
  "compileOnSave": true,
  "compilerOptions": {
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "ES5",
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"]
}
